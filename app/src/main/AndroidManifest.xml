<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/logos"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logos"
        android:supportsRtl="true"
        android:theme="@style/Theme.TooHelper"
        tools:targetApi="31" >
        <activity
            android:name=".ui.screen.PdfViewerActivity"
            android:exported="false" />
        <activity
            android:name=".ui.screen.UploadActivity"
            android:exported="false" />
        <activity
            android:name=".ui.screen.News_Screen_Activity"
            android:exported="false"
            android:theme="@style/Theme.TooHelper" />
        <activity
            android:name=".ScreenActivity"
            android:exported="false" />
        <activity
            android:name=".ui.screen.MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.TooHelper.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>